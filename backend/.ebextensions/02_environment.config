option_settings:
  aws:elasticbeanstalk:application:environment:
    # Spring Profile
    SPRING_PROFILES_ACTIVE: prod
    
    # Database Configuration
    # NOTE: Replace these with your actual RDS values after creating RDS instance
    SPRING_DATASOURCE_URL: jdbc:postgresql://your-rds-endpoint.rds.amazonaws.com:5432/rapidphoto
    SPRING_DATASOURCE_USERNAME: postgres
    SPRING_DATASOURCE_PASSWORD: your-secure-password
    
    # AWS S3 Configuration
    # NOTE: Replace with your actual S3 bucket name
    AWS_S3_BUCKET_NAME: rapidphoto-uploads-prod
    AWS_REGION: us-east-1
    
    # JWT Configuration
    # IMPORTANT: Generate a secure secret key (min 256 bits)
    # Example: openssl rand -base64 64
    JWT_SECRET: CHANGE-THIS-TO-A-SECURE-SECRET-KEY-MIN-256-BITS
    JWT_EXPIRATION_MS: 3600000
    
    # CORS Configuration
    # NOTE: Update with your actual frontend URLs
    CORS_ALLOWED_ORIGINS: https://your-frontend-domain.com,https://www.your-frontend-domain.com
    
    # Async Configuration
    SPRING_TASK_EXECUTION_POOL_CORE_SIZE: 100
    SPRING_TASK_EXECUTION_POOL_MAX_SIZE: 100

